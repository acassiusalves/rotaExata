
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthed() {
      return request.auth != null;
    }

    function isAppAdmin() {
      return isAuthed() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'socio', 'gestor'];
    }
    
    function isOwner(userId) {
      return isAuthed() && request.auth.uid == userId;
    }

    // AUTH USERS CAN READ/WRITE THEIR OWN USER DOCUMENT
    match /users/{userId} {
      allow read, update: if isOwner(userId);
      allow create, delete: if isAppAdmin();

      // Users can read/write their own settings subcollection
      match /settings/{settingId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Admins can manage all users
    match /users/{userId} {
      allow list: if isAppAdmin();
    }

    // A COURIER CAN READ/WRITE TO ITS OWN DOCUMENT
    match /couriers/{courierId} {
      allow read, update: if isOwner(courierId);
      allow create: if isAppAdmin();
    }

    // A COURIER CAN READ/WRITE TO ITS OWN TOKEN SUBCOLLECTION
    match /couriers/{courierId}/tokens/{tokenId} {
      allow read, write: if isOwner(courierId);
    }
    
    // RULES FOR ROUTES
    match /routes/{routeId} {
      // Admins can do anything
      allow create, delete, read, list, update: if isAppAdmin();
      // Drivers can only read routes assigned to them
      allow read: if isAuthed() && resource.data.driverId == request.auth.uid;
      // Drivers can list/query routes assigned to them (required for queries)
      allow list: if isAuthed() && request.auth.uid != null;
      // Drivers can update their assigned routes (e.g., change status)
      allow update: if isAuthed() && resource.data.driverId == request.auth.uid;

      // Allow read/write to subcollections within routes
      match /{document=**} {
        allow read, write: if isAuthed() && get(/databases/$(database)/documents/routes/$(routeId)).data.driverId == request.auth.uid;
      }
    }

    // RULES FOR SETTINGS
    match /settings/{settingId} {
      // Admins can read and write settings
      allow read, write: if isAppAdmin();
      // Authenticated users can read settings (drivers need to check validation settings)
      allow read: if isAuthed();
    }

    // RULES FOR LOCATION UPDATE REQUESTS
    match /locationUpdateRequests/{driverId} {
      // Admins can create location update requests
      allow create, update: if isAppAdmin();
      // Drivers can read their own location update requests
      allow read: if isAuthed() && driverId == request.auth.uid;
      // Drivers can delete their own processed requests
      allow delete: if isAuthed() && driverId == request.auth.uid;
    }

    // RULES FOR ROUTE CHANGE NOTIFICATIONS
    match /routeChangeNotifications/{routeId} {
      // Admins can do anything with notifications
      allow read, create, update, delete: if isAppAdmin();
      // Drivers can read and update notifications for their routes
      allow read, update: if isAuthed() && get(/databases/$(database)/documents/routes/$(routeId)).data.driverId == request.auth.uid;
    }

    // RULES FOR COUNTERS (used for generating route codes)
    match /counters/{counterId} {
      // Only admins can read and write counters
      allow read, write: if isAppAdmin();
    }

    // RULES FOR NOTIFICATIONS
    match /notifications/{notificationId} {
      // Admins and managers can read, create, update, and delete notifications
      allow read, create, update, delete: if isAppAdmin();
      // Drivers can read their own notifications
      allow read: if isAuthed() && resource.data.driverId == request.auth.uid;
      // Drivers can update only 'opened' and 'openedAt' fields of their own notifications
      allow update: if isAuthed()
        && resource.data.driverId == request.auth.uid
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['opened', 'openedAt']);
    }
  }
}
