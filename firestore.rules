rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Regra geral: por padrão, ninguém pode acessar nada.
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Coleção 'users':
    // - Usuário pode ler/escrever seu próprio documento.
    // - (Opcional: Admins podem ler todos os usuários).
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      // allow read: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow create: if request.auth.uid != null;
    }
    
    // Coleção 'routes':
    // - Apenas usuários autenticados podem ler/escrever rotas.
    // - (Opcional: refinar para que apenas o motorista atribuído ou admins possam modificar).
    match /routes/{routeId} {
       allow read, write: if request.auth.uid != null;
    }

    // Coleção 'orders':
    // - Apenas usuários autenticados podem ler/escrever pedidos.
     match /orders/{orderId} {
       allow read, write: if request.auth.uid != null;
    }
  }
}
